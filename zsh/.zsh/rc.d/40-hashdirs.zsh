# zshrc - hashdirs

# void package repo
hash -d vrepo="$HOME/r/void-packages"

# salt
hash -d salt="/srv/salt"
hash -d pillar="/srv/pillar"

# web/net
hash -d wsgi="/srv/wsgi"
hash -d wapp="/srv/apps"
hash -d ftp="/srv/ftp"
hash -d http="/srv/http"

# logs
hash -d vl="/var/log"
hash -d vln="/var/log/nginx"
